{
    "app-id" : "org.gnome.Games",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-games",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--talk-name=org.freedesktop.Tracker1",
        "--env=TRACKER_SPARQL_BACKEND=bus",
        "--share=network",
        "--device=all",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=host:ro",
        "--filesystem=~/.var/app/com.valvesoftware.Steam:ro",
        "--metadata=X-DConf=migrate-path=/org/gnome/Games/"
    ],
    "add-extensions": {
        "org.gnome.Games.LibretroPlugin": {
            "version": "stable",
            "directory": "lib/libretro/extra.d",
            "subdirectories": true,
            "no-autodownload": true,
            "autodelete": true
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/dbus-1",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules" : [
        "libretro-cores/libretro-bsnes-mercury.json",
        "libretro-cores/libretro-desmume2015.json",
        "libretro-cores/libretro-gambatte.json",
        "libretro-cores/libretro-gearsystem.json",
        "libretro-cores/libretro-handy.json",
        "libretro-cores/libretro-mednafen_ngp.json",
        "libretro-cores/libretro-mednafen_pce_fast.json",
        "libretro-cores/libretro-mednafen_vb.json",
        "libretro-cores/libretro-mednafen_wswan.json",
        "libretro-cores/libretro-mgba.json",
        "libretro-cores/libretro-nestopia.json",
        "libretro-cores/libretro-pcsx_rearmed.json",
        "libretro-cores/libretro-prosystem.json",
        "libretro-cores/libretro-stella2014.json",
        {
            "name" : "libretro-extra",
            "buildsystem" : "simple",
            "build-commands": [
                "mkdir -p /app/lib/libretro/extra.d"
            ]
        },
        "shared-modules/lua5.3/lua-5.3.5.json",
        {
            "name" : "tracker",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddocs=false",
                "-Dfts=false",
                "-Dfunctional_tests=false",
                "-Djournal=false",
                "-Dnetwork_manager=disabled",
                "-Dstemmer=disabled",
                "-Dbash_completion=no",
                "-Ddbus_services=/app/share/dbus-1/services",
                "-Dsystemd_user_services=no"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/tracker.git",
                    "tag" : "2.3.4",
                    "commit" : "1fab9a0bf547cc2d12b743b53f0df8423d36e83d"
                }
            ]
        },
        {
            "name" : "grilo",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Denable-grl-net=true",
                "-Denable-grl-pls=false",
                "-Denable-gtk-doc=false",
                "-Denable-static=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/grilo.git",
                    "tag" : "grilo-0.3.12",
                    "commit" : "cb5a21f9999891ceda53804b83d2583598662c59"
                }
            ],
            "cleanup" : [
                "/include",
                "/bin"
            ]
        },
        {
            "name" : "grilo-plugins",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Denable-filesystem=no",
                "-Denable-optical-media=no",
                "-Denable-youtube=no",
                "-Denable-bookmarks=no",
                "-Denable-metadata-store=no",
                "-Denable-vimeo=no",
                "-Denable-tracker=no",
                "-Denable-local-metadata=no",
                "-Denable-dleyna=no",
                "-Denable-thetvdb=no",
                "-Denable-tmdb=no",
                "-Denable-freebox=no",
                "-Denable-opensubtitles=no",
                "-Denable-gravatar=no",
                "-Denable-jamendo=no",
                "-Denable-raitv=no",
                "-Denable-magnatune=no",
                "-Denable-shoutcast=no",
                "-Denable-dmap=no",
                "-Denable-flickr=no",
                "-Denable-podcasts=no",
                "-Denable-chromaprint=no",
                "-Denable-lua-factory=yes"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/grilo-plugins.git",
                    "tag" : "grilo-plugins-0.3.10",
                    "commit" : "a6330af7d607a6a20364ec2924ad152d16c50cf2"
                }
            ],
            "cleanup" : [
                "/include"
            ]
        },
        "mime/mime.json",
        {
            "name" : "libevdev",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.freedesktop.org/libevdev/libevdev.git",
                    "tag" : "libevdev-1.9.0",
                    "commit" : "468760ba11438734912f793b1de00cb0f243497f"
                }
            ]
        },
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dtests=false",
                "-Dexamples=false",
                "-Dglade_catalog=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://source.puri.sm/Librem5/libhandy.git",
                    "tag" : "v0.0.13",
                    "commit" : "7a193d7692c9c76a1a94f17c4d30b585f77d177c"
                }
            ]
        },
        {
            "name" : "manette",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dgudev=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/aplazas/libmanette.git",
                    "tag" : "0.2.3",
                    "commit" : "8aacdcbcbf37d0e48a04ffc7dde11acb50ee628b"
                }
            ]
        },
        {
            "name" : "retro-gtk",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/retro-gtk.git",
                    "tag" : "0.18.1",
                    "commit" : "08e84543076364ca1d2141a9bdb7d85940b7c8f4"
                }
            ]
        },
        {
            "name" : "gnome-games",
            "buildsystem" : "meson",
            "post-install" : [
                "mkdir -p /app/lib/libretro/extra.d"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gnome-games.git",
                    "commit" : "2183004e6892ffa46ff303e8a163fb614421d42f"
                }
            ]
        }
    ]
}
